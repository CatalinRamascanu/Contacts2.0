<?xml version="1.0" encoding="utf-8"?>

<LinearLayout tools:context=".MainActivity" xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:id="@+id/linearLayout"
              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
              android:focusableInTouchMode="true">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50dp"
                  android:background="#0000A0" android:baselineAligned="false">
        <EditText android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/searchBox"
                  android:layout_weight=".50" android:hint="Search" android:autoText="true"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                     android:id="@+id/addContact" android:layout_weight=".20" android:src="@drawable/add_contact_icon"
                     android:scaleType="fitCenter"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/contactList_editable" android:headerDividersEnabled="false"/>
</LinearLayout>