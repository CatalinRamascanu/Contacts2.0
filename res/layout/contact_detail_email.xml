<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
              android:layout_width="fill_parent" android:layout_height="40dp" android:id="@+id/linearLayout">
    <ImageView android:layout_width="50dp" android:layout_height="40dp" android:id="@+id/email_logo"
               android:layout_gravity="center" android:layout_weight=".10" android:src="@drawable/phone_logo"/>
    <Spinner android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/email_spinner"
             android:layout_weight=".80" android:spinnerMode="dropdown"/>
    <ImageButton android:layout_width="45dp" android:layout_height="fill_parent" android:id="@+id/email_create_button"
                 android:layout_weight=".10" android:src="@drawable/phone_call_icon" android:scaleType="fitCenter"/>
</LinearLayout>